<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.PocketMoney.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarSettings"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.PocketMoney.PopupOverlay" />
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <CheckBox
        android:id="@+id/appPasscodeCheckBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="10dp"
        android:paddingStart="5dp"
        android:textSize="18sp"
        android:textAlignment="textStart"
        android:background="@drawable/background_with_shadow"
        android:text="App passcode"
        android:fontFamily="sans-serif-medium"
        android:textOff="Off"
        android:textOn="On"/>

    <CheckBox
        android:id="@+id/shareDataCheckBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="10dp"
        android:paddingStart="5dp"
        android:textSize="18sp"
        android:textAlignment="textStart"
        android:background="@drawable/background_with_shadow"
        android:text="Share transaction history"
        android:fontFamily="sans-serif-medium"
        android:textOff="Off"
        android:textOn="On"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/borders"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="10dp"
        android:paddingStart="5dp"
        android:paddingBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Theme"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-medium"
            android:layout_gravity="center"/>

        <Spinner
            android:id="@+id/theme_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:foregroundGravity="center"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="10dp"
        android:paddingStart="5dp"
        android:paddingBottom="5dp"
        android:text="Change your account details"
        android:textSize="20sp" />

    <android.widget.Button
        android:id="@+id/firstnameButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="10dp"
        android:paddingStart="5dp"
        android:text="Firstname"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:textAlignment="textStart"
        android:background="@drawable/borders"/>

    <android.widget.Button
        android:id="@+id/lastnameButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="10dp"
        android:paddingStart="5dp"
        android:text="Lastname"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:textAlignment="textStart"
        android:background="@drawable/borders"/>

    <android.widget.Button
        android:id="@+id/emailButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="10dp"
        android:paddingStart="5dp"
        android:text="Email"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:textAlignment="textStart"
        android:background="@drawable/borders"/>

    <android.widget.Button
        android:id="@+id/usernameButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="10dp"
        android:paddingStart="5dp"
        android:text="Username"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:textAlignment="textStart"
        android:background="@drawable/borders"/>

    <android.widget.Button
        android:id="@+id/passwordButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="10dp"
        android:paddingStart="5dp"
        android:text="Password"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:textAlignment="textStart"
        android:background="@drawable/borders"/>

    <android.widget.Button
        android:id="@+id/deleteAccountButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="10dp"
        android:paddingStart="5dp"
        android:text="Delete Account"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:textAlignment="textStart"
        android:background="@drawable/borders"
        android:textColor="#FF0000"/>

            <android.widget.Button
                android:id="@+id/aboutButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="10dp"
                android:paddingStart="5dp"
                android:text="About"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:textAlignment="textStart"
                android:background="@drawable/borders"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>